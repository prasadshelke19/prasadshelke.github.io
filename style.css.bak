/* General Body Styling */
body {
    font-family: 'Open Sans', Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    background-color: #f9f7f2; /* Faint cream background */
    color: #333;
}

/* Header Styling */
header {
    background: linear-gradient(135deg, #6a11cb, #2575fc); /* Gradient blue-purple */
    color: white;
    text-align: center;
    padding: 40px 20px; /* Increased padding for a bolder look */
    border-bottom: 5px solid #fff; /* White border for contrast */
}

header h1 {
    margin: 0;
    font-size: 2.8em; /* Slightly larger font size */
    letter-spacing: 2px; /* Adds spacing between letters */
}

header p {
    font-size: 1.2em;
    margin-top: 10px;
    font-weight: 400;
}

/* Profile Photo Styling */
.profile-photo {
    text-align: center;
    margin-bottom: 20px;
}

.profile-photo img {
    border-radius: 50%; /* Circular photo */
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15); /* Enhanced shadow */
    border: 3px solid #fff; /* White border around the photo */
    width: 200px;
    height: 200px;
    object-fit: cover; /* Ensures the image fits perfectly */
}

/* Section Styling */
section {
    margin: 40px auto; /* Increased spacing between sections */
    max-width: 800px;
    padding: 30px;
    background: white;
    border-radius: 10px; /* Rounded corners for a modern look */
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1); /* Softer shadow */
    transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth hover effect */
}

section:hover {
    transform: translateY(-5px); /* Slight upward movement on hover */
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15); /* Enhanced shadow on hover */
}

h2 {
    color: #6a11cb; /* Deep purple heading color */
    border-bottom: 2px solid #6a11cb; /* Matching border */
    padding-bottom: 10px;
    font-size: 1.8em;
    margin-bottom: 20px;
}

/* Skills Section Styling */
#skills {
    background: linear-gradient(135deg, #f3ecf6, #eef5ff); /* Subtle gradient background */
    border: 1px solid #ddd; /* Light border */
    padding: 30px;
    position: relative;
}

#skills::before {
    content: "üõ†Ô∏è"; /* Icon before the section */
    position: absolute;
    top: -15px;
    left: 20px;
    font-size: 2em;
    color: #6a11cb; /* Matches the theme */
}

.skill-category {
    margin-bottom: 20px;
}

.skill-category h3 {
    color: #6a11cb; /* Deep purple heading color */
    font-size: 1.5em;
    display: flex;
    align-items: center;
}

.skill-category h3::before {
    content: "‚¶ø"; /* Small circle icon before each skill category */
    margin-right: 10px;
    color: #2575fc; /* Bright blue icon */
    font-size: 1.2em;
}

.skill-category ul {
    list-style-type: none; /* Remove default bullets */
    padding: 0;
}

.skill-category li {
    position: relative;
    padding-left: 20px;
    margin-bottom: 10px;
    line-height: 1.6;
    font-size: 1em;
}

.skill-category li::before {
    content: "‚ñπ"; /* Triangle bullet point */
    position: absolute;
    left: 0;
    color: #6a11cb; /* Matches the theme */
    font-size: 1.2em;
}

/* Conferences and Talks Section */
#talks {
    background: linear-gradient(135deg, #f3ecf6, #eef5ff); /* Subtle gradient background */
    border: 1px solid #ddd; /* Light border */
    padding: 30px;
    position: relative;
}

#talks::before {
    content: "üé§"; /* Icon before the section */
    position: absolute;
    top: -15px;
    left: 20px;
    font-size: 2em;
    color: #6a11cb; /* Matches the theme */
}

.talks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Responsive grid */
    gap: 20px; /* Spacing between items */
}

.talk-item {
    background: white;
    padding: 20px;
    border-radius: 10px; /* Rounded corners */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
    transition: transform 0.3s ease, box-shadow 0.3s ease; /* Hover effect */
}

.talk-item:hover {
    transform: translateY(-5px); /* Slight upward movement */
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); /* Enhanced shadow */
}

.talk-item h3 {
    margin: 0 0 10px 0; /* Remove default margin */
    font-size: 1.4em;
    color: #6a11cb; /* Deep purple heading */
}

.talk-item p {
    margin: 5px 0;
    line-height: 1.6;
    word-wrap: break-word; /* Prevents long lines from overflowing */
}

.presentation-type {
    font-size: 0.9em;
    color: #2575fc; /* Bright blue for presentation type */
    font-weight: bold;
}

/* Honours and Awards Section */
#awards {
    background: linear-gradient(135deg, #fff3e0, #ffe0b2); /* Faint orange-yellow gradient */
    border: 1px solid #ddd; /* Light border */
    padding: 30px;
    position: relative;
}

#awards::before {
    content: "üèÜ"; /* Icon before the section */
    position: absolute;
    top: -15px;
    left: 20px;
    font-size: 2em;
    color: #ff9800; /* Warm orange to match the theme */
}

.awards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Responsive grid */
    gap: 20px; /* Spacing between items */
}

.award-item {
    background: white;
    padding: 20px;
    border-radius: 10px; /* Rounded corners */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
    transition: transform 0.3s ease, box-shadow 0.3s ease; /* Hover effect */
}

.award-item:hover {
    transform: translateY(-5px); /* Slight upward movement */
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); /* Enhanced shadow */
}

.award-item h3 {
    margin: 0 0 10px 0; /* Remove default margin */
    font-size: 1.4em;
    color: #ff9800; /* Warm orange for headings */
}

.award-item p {
    margin: 5px 0;
    line-height: 1.6;
    word-wrap: break-word; /* Prevents long lines from overflowing */
}

/* Footer Styling */
footer {
    text-align: center;
    margin-top: 40px;
    padding: 20px 0;
    background: linear-gradient(135deg, #6a11cb, #2575fc); /* Gradient blue-purple */
    color: white;
    border-top: 5px solid #fff; /* White border for contrast */
}

footer strong {
    color: white; /* Ensure icons and labels are visible */
}

footer a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}

footer a:hover {
    text-decoration: underline;
}